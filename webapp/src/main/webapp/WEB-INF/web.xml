<web-app>
    <servlet>
        <servlet-name>EchoServlet</servlet-name>
        <servlet-class>ru.job4j.servlets.EchoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EchoServlet</servlet-name>
        <url-pattern>/echo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>ru.job4j.crud_server.UserServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Interface</servlet-name>
        <servlet-class>ru.job4j.interface_servlet.InterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Interface</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InterfaceCreate</servlet-name>
        <servlet-class>ru.job4j.store.action_servlets.Create</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InterfaceCreate</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>InterfaceDelete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>InterfaceDelete</servlet-name>
        <servlet-class>ru.job4j.store.action_servlets.Delete</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>InterfaceUpdate</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>InterfaceUpdate</servlet-name>
        <servlet-class>ru.job4j.store.action_servlets.Update</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>MVCServlet</servlet-name>
        <servlet-class>ru.job4j.mvc_servlets.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MVCServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>ru.job4j.authentication.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>ru.job4j.authentication.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>ru.job4j.authentication.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

</web-app>